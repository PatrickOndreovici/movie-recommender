<div class="flex flex-col items-center font-sans py-12">
  <div class="w-full max-w-sm bg-neutral-900 border border-neutral-800 rounded-2xl p-8 shadow-2xl">
    
    <div class="mb-8 font-light text-center">
      <h2 class="text-2xl text-white tracking-tight mb-2">Create an account</h2>
      <p class="text-neutral-500 text-sm">Join the platform to access features.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-1.5">
        <%= f.label :email, class: "block text-sm font-medium text-neutral-400" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-neutral-950 border border-neutral-800 rounded-lg px-4 py-2 text-neutral-200 placeholder-neutral-600 focus:outline-none focus:border-neutral-600 focus:ring-1 focus:ring-neutral-600 transition-colors duration-200" %>
      </div>

      <div class="space-y-1.5">
        <%= f.label :name, class: "block text-sm font-medium text-neutral-400" %>
        <%= f.text_field :name, autocomplete: "name", class: "w-full bg-neutral-950 border border-neutral-800 rounded-lg px-4 py-2 text-neutral-200 placeholder-neutral-600 focus:outline-none focus:border-neutral-600 focus:ring-1 focus:ring-neutral-600 transition-colors duration-200" %>
      </div>

      <div class="space-y-1.5">
        <%= f.label :password, class: "block text-sm font-medium text-neutral-400" %>
        <% if @minimum_password_length %>
          <span class="text-xs text-neutral-500">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-neutral-950 border border-neutral-800 rounded-lg px-4 py-2 text-neutral-200 placeholder-neutral-600 focus:outline-none focus:border-neutral-600 focus:ring-1 focus:ring-neutral-600 transition-colors duration-200" %>
      </div>

      <div class="space-y-1.5">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-neutral-400" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-neutral-950 border border-neutral-800 rounded-lg px-4 py-2 text-neutral-200 placeholder-neutral-600 focus:outline-none focus:border-neutral-600 focus:ring-1 focus:ring-neutral-600 transition-colors duration-200" %>
      </div>

      <div class="pt-2">
        <%= f.submit "Sign up", class: "w-full bg-white text-neutral-950 font-medium py-2.5 px-4 rounded-lg hover:bg-neutral-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-neutral-900 focus:ring-white transition-all active:scale-[0.98] cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-neutral-400">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
