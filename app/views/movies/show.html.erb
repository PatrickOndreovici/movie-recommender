<% content_for :title, @movie.title %>

<div class="max-w-5xl mx-auto py-8 w-full text-neutral-200">
  <%= render "shared/navbar" %>
  
  <div class="mb-6 flex items-center">
    <%= link_to "&larr; Back to movies".html_safe, movies_path, class: "text-sm text-neutral-400 hover:text-white transition-colors flex items-center gap-2" %>
  </div>

  <div class="bg-neutral-900 border border-neutral-800 rounded-2xl overflow-hidden shadow-2xl">
    <div class="flex flex-col md:flex-row">
      <!-- Left side: Poster -->
      <div class="w-full md:w-1/3 lg:w-1/4">
        <div class="relative pt-[150%] md:pt-0 md:h-[100%] bg-neutral-800">
          <% if @movie.poster_url.present? %>
            <img src="<%= @movie.poster_url %>" alt="<%= @movie.title %>" class="absolute top-0 left-0 w-full h-full md:relative object-cover" onerror="this.src='https://placehold.co/400x600/1e293b/fff?text=No+Poster'; this.onerror=null;">
          <% else %>
            <img src="https://placehold.co/400x600/1e293b/fff?text=No+Poster" alt="<%= @movie.title %>" class="absolute top-0 left-0 w-full h-full md:relative object-cover">
          <% end %>
        </div>
      </div>

      <!-- Right side: Content -->
      <div class="w-full md:w-2/3 lg:w-3/4 p-8 flex flex-col">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h1 class="text-4xl font-bold text-white tracking-tight mb-2"><%= @movie.title %></h1>
            <div class="text-sm text-neutral-400 flex flex-wrap gap-3 items-center">
              <% if @movie.year %>
                <span class="inline-flex items-center justify-center bg-neutral-800 border border-neutral-700 px-3 py-1 rounded-full text-sm font-medium text-white shadow-sm">
                  <%= @movie.year %>
                </span>
              <% end %>
              <span class="text-neutral-500 font-medium tracking-wide text-sm uppercase"><%= @movie.genres.pluck(:name).join(" â€¢ ") %></span>
            </div>
          </div>
          
          <div class="flex-shrink-0 ml-4">
            <turbo-frame id="like-button-<%= @movie.id %>">
              <%= render "movies/likes/like_button", movie: @movie %>
            </turbo-frame>
          </div>
        </div>

        <div class="mt-6 flex-1">
          <h3 class="text-lg font-medium text-white mb-2">Synopsis</h3>
          <% if @movie.description.present? %>
            <p class="text-neutral-300 leading-relaxed"><%= @movie.description %></p>
          <% else %>
            <p class="text-neutral-500 italic">No synopsis available for this movie.</p>
          <% end %>
        </div>

        <div class="mt-10 pt-8 border-t border-neutral-800">
          <h3 class="text-lg font-medium text-white mb-4">Videos</h3>
          <div class="bg-neutral-950 border border-neutral-800 rounded-xl p-6 text-center">
             <p class="text-neutral-500">Video player coming soon</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
